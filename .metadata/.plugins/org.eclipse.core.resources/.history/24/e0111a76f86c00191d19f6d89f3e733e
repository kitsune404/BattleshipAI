	/**
	 * Checks for win
	 * @param one 
	 * @param two
	 * @return if a player has sunk all opponent's ships
	 */
	public boolean isWin() {
		int oneCount = 0;
		int twoCount = 0;
		for(int i = 0; i < 5; i++) {
			if(playerOne.getMyHitShips()[i] == true)
				oneCount++;
			if(playerTwo.getMyHitShips()[i] == true)
				twoCount++;
		}
		
		if(oneCount == 5) {
			winner = "Player One";
			return true;
		}
		if(twoCount == 5) {
			winner = "Player Two";
			return true;
		}
		return false;
	}

}
